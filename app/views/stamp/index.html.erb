<div class="container">
    <h1>Catalog of all stamps</h1>
    <span><%= render partial: "search" %></span>
    <div class="row">
        <% @stamps.each do |stamp| %>
            <div class="card w-15 info-card">
                <div class="front">
                    <%= image_tag image_url(stamp.image_url), class: "card-img-top" %>
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= stamp.name %>
                            </h5>

                        </div>

                </div>
                <div class="back">
                    <dl>
                        <dt>Release date</dt>
                        <dd>
                            <%= stamp.release_date %>
                        </dd>
                        <dt>End of use</dt>
                        <dd>
                            <%= stamp.end_of_use %>
                        </dd>
                        <dt>Nominal value</dt>
                        <dd>
                            <%= stamp.nominal_value %>
                        </dd><dt>Colour</dt>
                        <dd>
                            <%= stamp.colour %>
                        </dd><dt>Place of printing</dt>
                        <dd>
                            <%= stamp.place_of_printing %>
                        </dd><dt>Amount printed</dt>
                        <dd>
                            <%= stamp.amount_printed %>
                        </dd><dt>Artist</dt>
                        <dd>
                            <%= stamp.artist %>
                        </dd>
                        <dt>Currency</dt>
                        <dd>
                            <%= stamp.currency %>
                        </dd><dt>Tags</dt>
                        <dd>
                            <%= stamp.tag_list %>
                        </dd>
                    </dl>
                    </dl>
                </div>
            </div>
            <% end %>

    </div>
    <div class="row justify-content-center stamp-nav">
        <div class="col-6">
            <%= paginate @stamps %>
        </div>
    </div>
</div>